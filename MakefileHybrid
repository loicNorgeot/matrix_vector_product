CXX=mpicxx
FLAGS=-fopenmp -O3 -lm

matrix.o : matrix.cpp matrix.h
	$(CXX) -c matrix.cpp $(FLAGS)

vector.o : vector.cpp vector.h
	$(CXX) -c vector.cpp $(FLAGS)

csrmatrix.o : csrmatrix.cpp csrmatrix.h
	$(CXX) -c csrmatrix.cpp $(FLAGS)

mainHybrid.o : mainHybrid.cpp vector.h matrix.h csrmatrix.h
	$(CXX) -c mainHybrid.cpp $(FLAGS)

main : vector.o matrix.o csrmatrix.o mainHybrid.o
	$(CXX) -o main vector.o matrix.o csrmatrix.o mainHybrid.o $(FLAGS)
